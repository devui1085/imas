@model IMAS.UI.Areas.User.ViewModels.Dashboard.DashboardViewModel
@{
    ViewBag.Title = "داشبورد";
    var stats = Model.DashboardModelContainer;
}

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 blue" href="/user/statistics">
            <div class="visual">
                <i class="fa fa-comments"></i>
            </div>
            <div class="details">
                <div class="number number-fa">
                    <span data-counter="counterup" data-value="@stats.TodayTotallVisits">0</span>
                </div>
                <div class="desc">مجموع بازدید آگهی ها</div>
                <div >(امروز)</div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 red" href="/user/comment">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number number-fa">
                    <span data-counter="counterup" data-value="@stats.TotalAdvertismentCount">0</span>
                </div>
                <div class="desc">تعداد کل آگهی ها</div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 green" href="/user/article">
            <div class="visual">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number number-fa">
                    <span data-counter="counterup" data-value="@stats.ActiveAdvertismentCount">0</span>
                </div>
                <div class="desc">آگهی های فعال</div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 purple" href="/user/blog">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number number-fa">
                    <span data-counter="counterup" data-value="0">0</span>
                </div>
                <div class="desc">اعتبار</div>
            </div>
        </a>
    </div>
</div>

<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light data-portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-bar-chart font-dark hide"></i>
                    <span class="caption-subject font-dark ">تعداد مشاهده آگهی ها</span>
                    <span class="caption-helper">(هفتگی)</span>
                </div>
            </div>
            <div class="portlet-body">
                <div id="site_statistics_content" class="display-none" style="display: block;">
                    <div id="AdvertismentVisitChart" class="chart chart-div" style="height: 400px;padding: 0px; position: relative;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section PageBreadcrumb{
    <li>
        <i class="icon-home"></i>
        <a href="@Url.Action("Index")">داشبورد</a>
    </li>
}

@section PageActionsMenu{
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-fit-height grey-salt dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
            عملیات
            <i class="fa fa-angle-down"></i>
        </button>
        <ul class="dropdown-menu pull-right" role="menu">
            <li>
                <a href="">
                    <i class="icon-refresh"></i> بروزرسانی اطلاعات
                </a>
            </li>

        </ul>
    </div>
}

@section PageScripts{
    <script src="~/Content/assets/global/plugins/counterup/jquery.waypoints.min.js" ></script>
    <script src="~/Content/assets/global/plugins/counterup/jquery.counterup.min.js" ></script>
    <script src="~/Content/assets/global/plugins/amcharts/amcharts.js" ></script>
    <script src="~/Content/assets/global/plugins/amcharts/serial.js" ></script>
    <script src="~/Content/assets/global/plugins/amcharts/lang/fa.js" ></script>
    <script src="~/Content/assets/global/scripts/IMAS-charts.js"></script>
    <script src="~/Content/assets/pages/scripts/user_dashboard_index.min.js" ></script>
}

@section Head{
    <link href="~/Content/assets/global/css/IMAS-charts.css" rel="stylesheet" />
    <link href="~/Content/assets/pages/css/user_dashboard.css" rel="stylesheet" />
}