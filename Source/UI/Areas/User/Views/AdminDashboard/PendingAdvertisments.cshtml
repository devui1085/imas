@using IMAS.Common.Globalization;
@{
    ViewBag.Title = "آگهی های در انتظار تایید";
}

<div class="table-container">
    <table class="advertisments-grid table table-striped table-bordered table-hover table-checkable dataTable"></table>
</div>

@section PageBreadcrumb{
    <li>
        <i class="icon-home"></i>
        <a href="@Url.Action("index")">مدیریت</a>
        <i class="fa fa-angle-left"></i>
    </li>
    <li>
        <span>آگهی های در انتظار تایید</span>
    </li>
}

@section PageActionsMenu{
    <div class="btn-group">
        <button class="btn btn-fit-height" href="javascript:;" data-toggle="dropdown" aria-expanded="true">
            عملیات گروهی
            <i class="fa fa-angle-down"></i>
        </button>
        <ul class="dropdown-menu pull-right">
            <li id="confirm-advertisments">
                <a>
                    <i id="confirm-advertisments" class="fa fa-check font-red"></i><span class="font-red">تایید آگهی ها</span>
                </a>
            </li>
            <li id="remove-advertisments">
                <a>
                    <i id="remove-advertisments" class="fa fa-remove font-red"></i><span class="font-red">حذف آگهی ها</span>
                </a>
            </li>
        </ul>
    </div>
}

@section ComponentScripts {
    <script src="~/content/assets/global/plugins/datatables/datatables.min.js"></script>
    <script src="~/content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js"></script>
    <script src="~/content/assets/global/plugins/datatables/zw-datatable.js"></script>
}

@section PageScripts {
    <script src="~/content/assets/pages/scripts/user_admindashboard_pending_advertisments.js"></script>
}

@section Head {
    <link href="~/content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
    <link href="~/content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap-rtl.css" rel="stylesheet" />
}


