
<div id="Container">
        <form id="FormContent" name="FormContent">
            <div id="FormMultipleUpload" enctype="multipart/form-data" method="post">
                <span class="btn btn-success fileinput-button">
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>انتخاب تصاویر</span>
                    <input type="file" name="UploadedFiles" id="UploadedFiles"  accept="image/*"  multiple />
                </span>
                <div id="drop_zone" class="drop_zone">تصاویر خود را در اینجا رها کنید</div>
            </div>
            <div class="progress CustomProgress">
                <div id="FileProgress" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                    <span></span>
                </div>
            </div>
            <div id="Files">
            </div>
        </form>
</div>