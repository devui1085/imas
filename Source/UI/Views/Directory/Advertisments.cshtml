@model IMAS.UI.ViewModels.AdvertismentListViewModel
@using IMAS.UI.Infrastructure.Mvc.GlobalViewModel
@{
    ViewBag.Title = string.Format("آگهی ها (صفحه {0})", Model.PageIndex);
    var paginationViewModel = new PaginationViewModel() {
        PageSize = Model.PageSize,
        SelectedPage = Model.PageIndex,
        TotalRows = Model.TotallRows,
        VisiblePreviousPages = 3,
        VisibleNextPages = 3,
        UrlTemplate = "/directory/advertisments/{PageIndex}"
    };
}

<div class="row">
    <div class="col-lg-12">
        <div class="mt-element-list">
            <div class="mt-list-container list-news article-info">
                <ul>
                    @foreach (var advertisment in Model.Advertisments) {
                        <li class="mt-list-item">
                            <div class="list-item-content">
                                <h5 class="uppercase">
                                    <a href="@Url.Action("index", "advertisment", new { id = advertisment.Id})">@advertisment.Title</a>
                                </h5>
                                <div class="authorder-by"><span class="number-fa">@advertisment.RegisterDateString</span></div>
                                <div class="content-abstract">@advertisment.Comment</div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.Partial("_pagination", paginationViewModel)
</div>

@section head {
    <meta name="description" content="آگهی های منتشر شده در  طاها سی ان سی - صفحه @Model.PageIndex" />
}

