@model IMAS.PresentationModel.Model.Advertisment.FlatStonePM
<div class="portlet light ">
    <div class="portlet-body form">
        <div class="form-horizontal" role="form">
            <div class="form-body">
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.StoneType)
                    </div>
                    <div class="col-md-10 form-field">
                        @(("StoneType_" + Model.StoneType).Localize())
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.MaximumGrindingWidth)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.MaximumGrindingWidth
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.MaximumGrindingLength)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.MaximumGrindingLength
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.MaximumGrindingHeight)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.MaximumGrindingHeight
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.StoneWidth)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.StoneWidth
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.SpindleSpeed)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.SpindleSpeed
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.HydraulicReservoirPressure)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.HydraulicReservoirPressure
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 form-lable">
                        @Html.LabelFor(model => model.HydraulicOilTankCapacity)
                    </div>
                    <div class="col-md-10 form-field">
                        @Model.HydraulicOilTankCapacity
                    </div>
                </div>
            </div>

        </div>
    </div>
